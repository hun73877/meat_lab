<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:id="@+id/d_lab_note_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/bg_dialog_radius"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
            android:scrollbars="none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <FrameLayout
                        android:layout_marginBottom="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="300dp">

                    <androidx.viewpager.widget.ViewPager
                            android:id="@+id/d_lab_note_pager_view"
                            android:layout_width="match_parent"
                            android:layout_height="300dp"
                            android:background="@color/gray" />

                    <TextView
                            android:text="0/0"
                            android:layout_margin="15dp"
                            android:id="@+id/d_lab_note_pager_view_number_indicator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/item_text_title_1"
                            android:textColor="@color/white"/>

                    <LinearLayout
                            android:id="@+id/d_lab_note_profile_area"
                            android:paddingHorizontal="7dp"
                            android:paddingVertical="5dp"
                            android:layout_margin="15dp"
                            android:orientation="horizontal"
                            android:layout_gravity="bottom"
                            android:background="@drawable/item_text_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/d_lab_note_profile_image"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/logo_7"
                                app:civ_border_color="@color/bg_main"
                                app:civ_border_overlay="true"
                                app:civ_border_width="0.1dp"
                                app:civ_circle_background_color="@color/gray" />

                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            <TextView
                                    android:id="@+id/d_lab_note_profile_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="15dp"
                                    android:layout_marginHorizontal="7dp"
                                    android:text="NAME"
                                    android:textColor="@color/white" />

                            <TextView
                                    android:id="@+id/d_lab_note_write_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:textSize="10dp"
                                    android:layout_marginHorizontal="7dp"
                                    android:text="DATE"
                                    android:textColor="@color/white" />

                        </LinearLayout>

                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                        android:gravity="right"
                        android:id="@+id/d_lab_note_mark_area"
                        android:paddingHorizontal="20dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="bottom"
                            android:src="@drawable/ic_book_mark_off_2"
                            android:id="@+id/d_lab_note_button_book_mark"/>

                    <!--android:layout_marginRight="20dp"-->
<!--                    <ImageView
                            android:padding="1dp"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_like_off"
                            android:id="@+id/d_lab_note_button_like"/>-->

                </LinearLayout>

                <TextView
                        android:text="북마크 수: 00"
                        android:textSize="15dp"
                        android:gravity="right"
                        android:paddingHorizontal="25dp"
                        android:textColor="@color/bg_main"
                        android:id="@+id/d_lab_note_button_book_mark_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                <TextView
                        android:id="@+id/d_lab_note_title"
                        android:layout_marginHorizontal="7dp"
                        android:text="TITLE"
                        android:textSize="28dp"
                        android:textColor="@color/bg_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <TextView
                        android:id="@+id/d_lab_note_time"
                        android:layout_marginHorizontal="7dp"
                        android:text="TIME"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <TextView
                        android:layout_marginTop="55dp"
                        android:layout_marginHorizontal="7dp"
                        android:text="사용하는 육류"
                        android:textSize="20dp"
                        android:textColor="@color/bg_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <TextView
                        android:id="@+id/d_lab_note_meat_name"
                        android:layout_marginHorizontal="15dp"
                        android:text="MEAT NAME"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <TextView
                        android:layout_marginTop="55dp"
                        android:layout_marginHorizontal="7dp"
                        android:text="도구"
                        android:textSize="20dp"
                        android:textColor="@color/bg_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <TextView
                        android:id="@+id/d_lab_note_tools"
                        android:layout_marginHorizontal="15dp"
                        android:text="TOOL NAME"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <TextView
                        android:layout_marginTop="55dp"
                        android:layout_marginHorizontal="7dp"
                        android:text="부위"
                        android:textSize="20dp"
                        android:textColor="@color/bg_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <TextView
                        android:id="@+id/d_lab_note_meat_part"
                        android:layout_marginHorizontal="15dp"
                        android:text="MEAT PART"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <TextView
                        android:layout_marginTop="55dp"
                        android:layout_marginHorizontal="7dp"
                        android:text="재료"
                        android:textSize="20dp"
                        android:textColor="@color/bg_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <TextView
                        android:id="@+id/d_lab_note_material"
                        android:layout_marginHorizontal="15dp"
                        android:text="MATERIAL"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <TextView
                        android:layout_marginTop="55dp"
                        android:layout_marginHorizontal="7dp"
                        android:text="요리 절차"
                        android:textSize="20dp"
                        android:textColor="@color/bg_main"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <TextView
                        android:id="@+id/d_lab_note_cooking_process"
                        android:layout_marginHorizontal="15dp"
                        android:text="COOKING PROCESS"
                        android:textSize="15dp"
                        android:layout_marginBottom="100dp"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                <!--            <View android:layout_width="wrap_content"
                                  android:background="@color/bg_main"
                                  android:layout_height="0.1dp" />-->

            </LinearLayout>

        </FrameLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageView
            android:padding="6dp"
            android:layout_gravity="right"
            android:id="@+id/d_lab_note_button_close"
            android:src="@drawable/ic_close"
            android:layout_width="50dp"
            android:layout_height="50dp" />

</FrameLayout>
